{
  "name": "micro-annotator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@recogito/recogito-js": "^1.6.0",
    "@types/node": "^16.9.0",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-linkify": "^1.0.1",
    "downshift": "^6.1.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-linkify": "^1.0.0-alpha",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "node_modules/.bin/eslint ."
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-multiple-empty-lines": [2, {"max": 2}],
      "prefer-const": "error",
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "sort-imports": ["error", {"ignoreCase":  true}]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "typescript": "^4.4.2"
  }
}
